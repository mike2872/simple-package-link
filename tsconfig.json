{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./lib",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "noEmit": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "checkJs": false,
    "noErrorTruncation": true,
    "importHelpers": true,
    "removeComments": true
  },

  "include": ["./src"],
  "exclude": ["test"],
  "ts-node": {
    "files": true
  }
}
