{
  "name": "simple-package-link",
  "description": "",
  "version": "4.8.20",
  "homepage": "",
  "private": false,
  "keywords": [],
  "author": {
    "name": "Mike Jensen",
    "email": "jensen.mike57@gmail.com"
  },
  "contributors": [],
  "bugs": {},
  "files": [
    "lib",
    "test",
    "LICENSE",
    "README.MD",
    "package.json"
  ],
  "engines": {
    "node": "^12 || ^14 || ^16 || ^18",
    "yarn": ">= 0.18.0",
    "pnpm": ">=7"
  },
  "bin": {
    "spl-linked": "./lib/scripts/linked.js",
    "spl-clean": "./lib/scripts/clean.js"
  },
  "scripts": {
    "test": "pnpm run lint && pnpm run compile && pnpm run jest",
    "lint": "eslint src/. test/. --config .eslintrc.json --ext .ts --fix",
    "jest": "jest --forceExit",
    "compile": "shx rm -rf lib/ && tsc && cp src/typings/index.d.ts lib/index.d.ts",
    "prepare": "husky install",
    "prepublish": "pnpm compile",
    "increment-version": "ts-node ./scripts/increment-version.ts",
    "publish:latest": "pnpm publish --tag latest --access public --publish-branch main",
    "publish:dry-run": "pnpm publish:latest --dry-run",
    "publish:bug-fix": "pnpm publish:dry-run && pnpm increment-version patch && pnpm publish:latest",
    "publish:feature": "pnpm publish:dry-run && pnpm increment-version minor && pnpm publish:latest",
    "publish:breaking": "pnpm publish:dry-run && pnpm increment-version major && pnpm publish:latest"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": []
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "concurrently": "^7.2.1",
    "lodash": "^4.17.21",
    "ramda": "^0.28.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "tsup": "^6.2.3",
    "typescript": "^4.7.3",
    "yarn": "1.22.18"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.39",
    "@types/ramda": "^0.28.13",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.0",
    "jest": "^28.1.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "shx": "^0.3.4",
    "ts-jest": "^28.0.4",
    "ts-node-dev": "^2.0.0"
  },
  "resolutions": {}
}
